@model IEnumerable<DataLayer.Unit>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml"; }
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Units</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Units</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">

                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Countable)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Symbol)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UnitGroup)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Countable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Symbol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="location.href='@Url.Action("Edit", "Units", new { id=item.UnitID })'">
                            <i class="fas fa-edit"></i>
                        </button> |
                        <button class="btn btn-sm btn-primary" onclick="location.href='@Url.Action("Details", "Units", new { id=item.UnitID })'">
                            <i class="fas fa-list"></i>
                        </button> |
                        <button class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("Delete", "Units", new { id = item.UnitID })'">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>}
                        </table>
                    </div>
                </div>
                @Html.ActionLink("Create New", "Create", "Units", null, new { @class = "btn btn-success mt-4 btn-large" })
            </div>
        </div>
    </div>
</section>

